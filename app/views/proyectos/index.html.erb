<h1>Proyectos</h1>

<div class="row">
    <div class="col-md-10">
        <table id="datagrid" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Activo</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
                <% @proyectos.each do |proyecto| %>
                <tr>
                    <td><%= proyecto.codigo %></td>
                    <td><%= proyecto.nombre %></td>
                    <td class="centered">
                        <% if proyecto.activo %>
                        <i class="fa fa-check-square-o"></i>
                        <% else %>
                        <i class="fa fa-square-o"></i>
                        <% end %>
                    </td>
                    <td class="centered">
                        <%= link_to edit_proyecto_path(proyecto) do %>
                        <i class="fa fa-pencil"></i>
                        <% end %>
                    </td>
                    <td class="centered">
                        <%= link_to proyecto, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } do %>
                        <i class="fa fa-trash-o"></i>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<br>

<%= link_to new_proyecto_path, :class=> "btn btn-sm btn-primary" do %>
<i class="fa fa-plus text-success"></i> Nuevo Proyecto
<% end %>
