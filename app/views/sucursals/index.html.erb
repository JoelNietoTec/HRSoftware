<h1>Sucursales</h1>

<div class="row">
    <div class="col-md-10">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Activo</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @sucursals.each do |sucursal| %>
                <tr>
                    <td><%= sucursal.codigo %></td>
                    <td><%= sucursal.nombre %></td>
                    <td><%= sucursal.activo %></td>
                    <td><%= link_to 'Show', sucursal %></td>
                    <td><%= link_to 'Edit', edit_sucursal_path(sucursal) %></td>
                    <td><%= link_to 'Destroy', sucursal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


<br>

