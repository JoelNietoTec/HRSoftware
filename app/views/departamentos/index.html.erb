<h1>Departamentos</h1>

<div class="row">
    <div class="col-md-10">
        <table id="datagrid" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Activo</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
            </thead>

            <tbody>
                <% @departamentos.each do |departamento| %>
                <tr>
                    <td><%= departamento.codigo %></td>
                    <td><%= departamento.nombre %></td>
                    <td class="centered">
                        <% if departamento.activo %>
                        <i class="fa fa-check-square-o"></i>
                        <% else %>
                        <i class="fa fa-square-o"></i>
                        <% end %>
                    </td>
                    <td class="centered">
                        <%= link_to edit_departamento_path(departamento) do %>
                        <i class="fa fa-pencil"></i>
                        <% end %>
                    </td>
                    <td class="centered">
                        <%= link_to departamento, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } do %>
                        <i class="fa fa-trash-o"></i>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<br>

<%= link_to  new_departamento_path, :class=> "btn btn-primary btn-sm" do %>
<i class="fa fa-plus text-success"></i> Nuevo Departamento
<% end %>
