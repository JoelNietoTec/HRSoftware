<h1>Listing turnos</h1>
<div class="row">
    <div class="col-md-10">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Entrada</th>
                    <th>Inicio descanso</th>
                    <th>Fin descanso</th>
                    <th>Salida</th>
                    <th>Descanso</th>
                    <th>Activo</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @turnos.each do |turno| %>
                <tr>
                    <td><%= turno.codigo %></td>
                    <td><%= turno.nombre %></td>
                    <td><%= turno.entrada.strftime("%I:%M %p") %></td>
                    <td><% if turno.inicio_descanso %>
                        <%= turno.inicio_descanso.strftime("%I:%M %p") %>
                        <% else %>
                        <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                    <td><% if turno.fin_descanso %>
                        <%= turno.fin_descanso.strftime("%I:%M %p") %>
                        <% else %>
                        <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                    <td><%= turno.salida.strftime("%I:%M %p") %></td>
                    <td><%= turno.descanso %></td>
                    <td><%= turno.activo %></td>
                    <td><%= link_to 'Show', turno %></td>
                    <td><%= link_to 'Edit', edit_turno_path(turno) %></td>
                    <td><%= link_to 'Destroy', turno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


