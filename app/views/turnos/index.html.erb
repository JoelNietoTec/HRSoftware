<h1>Turnos</h1>
<div class="row">
    <div class="col-md-10">
        <table id="datagrid" class="table table-striped table-condensed table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Entrada</th>
                    <th>Inicio Descanso</th>
                    <th>Fin Descanso</th>
                    <th>Salida</th>
                    <th>Activo</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @turnos.each do |turno| %>
                <tr>
                    <td><%= turno.nombre %></td>
                    <td><%= turno.entrada %></td>
                    <td><%= turno.inicio_descanso %></td>
                    <td><%= turno.fin_descanso %></td>
                    <td><%= turno.salida %></td>
                    <td><%= turno.activo %></td>
                    <td><%= link_to 'Show', turno %></td>
                    <td><%= link_to 'Edit', edit_turno_path(turno) %></td>
                    <td><%= link_to 'Destroy', turno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<br>
<%= link_to new_turno_path, :class=> "btn btn-sm btn-primary" do %>
<i class="fa fa-plus text-success"></i> Nuevo Turno
<% end %>
