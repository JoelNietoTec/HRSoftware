<%= form_for(@empleado) do |f| %>
<% if @empleado.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@empleado.errors.count, "error") %> prohibited this empleado from being saved:</h2>

  <ul>
    <% @empleado.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= image_tag ("default_avatar.png") %>
<%= f.file_field :avatar %>
<div class="field">
  <%= f.label :codigo %><br>
  <%= f.text_field :codigo %>
</div>

<div class="row">
  <div class="col-md-8">
    <ul class="nav nav-tabs">
      <li><a href="#Personal" data-toggle="tab">Datos Personales</a></li>
      <li></li>
      <li></li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in" id="Personal">
        <div class="form-horizontal">
          <div class="form-group col-md-6">
              <%= f.label :nombres, :class=> "col-md-2 control-label" %>
              <div class="col-md-10">
                <%= f.text_field :nombres, :class=> "form-control input-sm" %>
              </div>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :apellidos, :class=> " col-md-2 control-label" %>
              <div class="col-md-10">
                <%= f.text_field :apellidos, :class=> "form-control input-sm" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="field col-md-4">
              <%= f.label :cedula, :class=> "control-label" %><br>
              <%= f.text_field :cedula, :class=> "form-control input-sm" %>
            </div>
            <div class="field col-md-4">
              <%= f.label :fecha_nacimiento, "Fecha de Nacimiento", :class=> "control-label" %><br>
              <%= f.text_field :fecha_nacimiento, :class=> "form-control input-sm datepicker" %>
            </div>
            <div class="field col-md-4">
              <%= f.label :nacionalidad_id, :class=> "control-label" %><br>
              <%= f.country_select :nacionalidad_id, ["PanamÃ¡"], {:locale => "es"}, :class=> "form-control input-sm" %>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label :seguro_social %><br>
          <%= f.text_field :seguro_social %>
        </div>
        <div class="field">
          <%= f.label :dv %><br>
          <%= f.text_field :dv %>
        </div>
        <div class="field">
          <%= f.label :clave_isr %><br>
          <%= f.text_field :clave_isr %>
        </div>
      </div>
      <div class="tab-pane fade"></div>
      <div class="tab-pane fade"></div>
    </div>
  </div>
</div>

<div class="field">
  <%= f.label :grupo_pago_id %><br>
  <%= f.collection_select :grupo_pago_id, GrupoPago.select("id, nombre").all, :id, :nombre %>
</div>
<div class="field">
  <%= f.label :status_id %><br>
  <%= f.collection_select :status_id, Estatus.select("id, nombre").all, :id, :nombre %>
</div>
<div class="field">
  <%= f.label :tipo_salario_id %><br>
  <%= f.collection_select :tipo_salario_id, TipoSalario.select("id, nombre").all, :id, :nombre %>
</div>
<div class="field">
  <%= f.label :tipo_empleado_id %><br>
  <%= f.collection_select :tipo_empleado_id, TipoEmpleado.select("id, nombre").all, :id, :nombre %>
</div>
<div class="field">
  <%= f.label :salario_pactado %><br>
  <%= f.text_field :salario_pactado %>
</div>
<div class="field">
  <%= f.label :horas_base %><br>
  <%= f.text_field :horas_base %>
</div>
