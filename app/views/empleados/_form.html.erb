</div>
<div class="field">
  <%= f.label :departamento_id %><br>
  <%= f.collection_select :departamento_id, Departamento.select("id, nombre").where(:activo=> true), :id, :nombre %>
</div>
<div class="field">
  <%= f.label :centro_costo_id %><br>
