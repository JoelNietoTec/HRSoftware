<h1>Empleados</h1>

<table id="datagrid" class="table table-condensed table-hover table-responsive">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Cédula</th>
      <th>Departamento</th>
      <th>Cargo</th>
      <th>Tipo Empleado</th>
      <th>Salario Pactado</th>
      <th>Fecha Ingreso</th>
      <th>Sucursal</th>
      <th>Centro Costos</th>
      <th>Sección</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.codigo %></td>
        <td><%= empleado.nombres %></td>
        <td><%= empleado.apellidos %></td>
        <td><%= empleado.cedula %></td>
        <td><%= Departamento.find(empleado.departamento_id).nombre %></td>
        <td><%= Cargo.find(empleado.cargo_id).nombre %></td>
        <td><%= TipoEmpleado.find(empleado.tipo_empleado_id).nombre %></td>
        <td><%= number_to_currency(empleado.salario_pactado) %></td>
        <td><%= empleado.fecha_ingreso.strftime("%m/%d/%Y") %></td>
        <td><%= Sucursal.find(empleado.sucursal_id).nombre %></td>
        <td><%= CentroCosto.find(empleado.centro_costo_id).nombre %></td>
        <td><%= Seccion.find(empleado.seccion_id).nombre %></td>
        <td><%= empleado.email %></td>
        <td><%= number_to_phone(empleado.telefono) %></td>
        <td class="centered">
        <%= link_to empleado do %>
        <i class="fa fa-list-alt btn btn-xs btn-info" title="Detalles"></i>
        <% end %>
        <%= link_to edit_empleado_path(empleado) do %>
        <i class="fa fa-pencil btn btn-xs btn-primary" title="Editar"></i>
        <% end %>
        <%= link_to empleado, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-o btn btn-xs btn-danger" title="Borrar"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_empleado_path, :class=>"btn btn-primary btn-sm" do %>
<i class="fa fa-plus text-success"></i> Nuevo Empleado
<% end %>
