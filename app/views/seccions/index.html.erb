<h1>Listing seccions</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seccions.each do |seccion| %>
      <tr>
        <td><%= seccion.codigo %></td>
        <td><%= seccion.nombre %></td>
        <td><%= seccion.activo %></td>
        <td><%= link_to 'Show', seccion %></td>
        <td><%= link_to 'Edit', edit_seccion_path(seccion) %></td>
        <td><%= link_to 'Destroy', seccion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

