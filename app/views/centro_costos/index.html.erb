<h1>Centros de Costos</h1>

<div class="row">
    <div class="col-md-10">
        <table id="datagrid" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Activo</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @centro_costos.each do |centro_costo| %>
                <tr>
                    <td><%= centro_costo.codigo %></td>
                    <td><%= centro_costo.nombre %></td>
                    <td><%= centro_costo.activo %></td>
                    <td><%= link_to 'Show', centro_costo %></td>
                    <td><%= link_to 'Edit', edit_centro_costo_path(centro_costo) %></td>
                    <td><%= link_to 'Destroy', centro_costo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>



<br>

<%= link_to new_centro_costo_path, :class=> "btn btn-primary btn-sm" do %>
<i class="fa fa-plus text-success"></i> Nuevo Centro de Costos
<% end %>
