<%= form_for(@usuario) do |f| %>
<% if @usuario.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

  <ul>
    <% @usuario.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Datos Usuario</h4>
      </div>
      <div class="panel-body form-horizontal">
        <div class="field form-group">
          <div class="col-md-12">
            <div class="input-group">
              <%= f.text_field :username, {:class=> "form-control", :placeholder=>"UserName"} %>
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
            </div>
          </div>
        </div>
        <br>
        <div class="field form-group">
          <%= f.label :email, :class=> "control-label col-md-4" %>
          <div class="col-md-6">
            <%= f.text_field :email, :class=> "form-control input-sm" %>
          </div>
        </div>
        <div class="field form-group">
          <%= f.label :password, :class=> "control-label col-md-4" %>
          <div class="col-md-6">
            <%= f.password_field :password, :class=> "form-control input-sm" %>
          </div>
        </div>
        <div class="field form-group">
          <%= f.label :password_confirmation, :class=> "control-label col-md-4" %>
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, :class=> "form-control input-sm" %>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="actions">
          <%= f.submit "Guardar Usuario", :class=> "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
