<h1>Fases</h1>

<div class="row">
    <div class="col-md-10">
        <table id="datagrid" class="table table-responsve table-striped table-condensed table-hover">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Activo</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
            </thead>

            <tbody>
                <% @fases.each do |fase| %>
                <tr>
                    <td><%= fase.codigo %></td>
                    <td><%= fase.nombre %></td>
                    <td class="centered">
                        <% if fase.activo %>
                        <i class="fa fa-check-square-o"></i>
                        <% else %>
                        <i class="fa fa-square-o"></i>
                        <% end %>
                    </td>
                    <td class="centered">
                        <%= link_to edit_fase_path(fase) do %>
                        <i class="fa fa-pencil"></i>
                        <% end %>
                    </td>
                    <td class="centered">
                        <%= link_to fase, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } do %>
                        <i class="fa fa-trash-o"></i>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>


<br>

<%= link_to new_fase_path, :class=> "btn btn-primary btn-sm" do %>
<i class="fa fa-plus text-success"></i> Nueva Fase
<% end %>
